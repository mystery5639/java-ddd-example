pipeline {
    agent any

    tools {
        jdk 'Java 17' // must match the JDK name you configured
    }

    environment {
        GRADLE_OPTS = "-Dorg.gradle.jvmargs='-Xmx1024m'"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Test') {
            steps {
                sh './gradlew test'
            }
            post {
                always {
                    junit 'build/test-results/test/*.xml'
                }
            }
        }

        stage('Assemble') {
            steps {
                sh './gradlew assemble'
            }
        }
    }

    post {
        success {
            echo 'Gradle build and tests succeeded!'
        }
        failure {
            echo 'Gradle build or tests failed.'
        }
    }
}
